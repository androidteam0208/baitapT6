<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_film_edit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context="com.example.vantrantrucphuong.quanlyfilm.FilmEdit">
    <android.support.v7.widget.Toolbar
        android:background="#1639ff"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Film Edit"
            android:layout_gravity="center"
            android:id="@+id/toolbar_title" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:padding="20dp"
        android:layout_weight="5"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ImageView
            android:padding="2dp"
            android:background="@drawable/border_image"
            android:layout_gravity="center"
            android:src="@mipmap/ic_launcher"
            android:layout_marginRight="20dp"
            android:id="@+id/filmImage"
            android:scaleType="fitXY"
            android:layout_width="100dp"
            android:layout_height="120dp" />

        <EditText
            android:textSize="20dp"
            android:paddingBottom="15px"
            android:layout_gravity="center"
            android:id="@+id/txt_filmName"
            android:text="Super Girl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <EditText
        android:paddingBottom="15px"
        android:paddingLeft="20dp"
        android:textSize="20dp"
        android:id="@+id/txt_FilmSub"
        android:text="Nữ siêu nhân"
        android:layout_weight="1.07"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <LinearLayout
        android:padding="20dp"
        android:orientation="horizontal"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:background="#1639ff"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RatingBar
            android:rating="3"
            android:layout_marginLeft="40dp"
            android:layout_gravity="center"
            android:id="@+id/ratingBar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isIndicator="true"
            android:numStars="5"
            android:stepSize="0.5"/>
    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="0dp">
        <Button
            android:layout_gravity="center"
            android:id="@+id/btn_OK"
            android:text="OK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_gravity="center"
            android:id="@+id/btn_Cancel"
            android:text="Cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>
